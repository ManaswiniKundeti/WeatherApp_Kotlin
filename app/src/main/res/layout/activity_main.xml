<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/title"
            android:layout_width="154dp"
            android:layout_height="34dp"
            android:text="Enter your zip code"
            android:textSize="@dimen/title_text_height"
            app:layout_constraintEnd_toEndOf="@+id/zipcodeEditText"
            app:layout_constraintBottom_toTopOf="@+id/zipcodeEditText" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="@+id/zipcodeEditText"/>
    <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/zipcode_entry_icon_size"
            android:layout_height="@dimen/zipcode_entry_icon_size"
            android:src="@drawable/ic_location_on_black_24dp"
            app:layout_constraintEnd_toEndOf="@+id/title" app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintBottom_toTopOf="@+id/title"/>

    <EditText
            android:id="@+id/zipcodeEditText"
            android:layout_width="130dp"
            android:layout_height="42dp"
            android:hint="Enter zip code"
            android:inputType="number"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.263"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:layout_width="151dp"
            android:layout_height="44dp"
            android:text="Submit zipcode"
            android:id="@+id/enterButton"
            app:layout_constraintTop_toBottomOf="@+id/zipcodeEditText"
            app:layout_constraintStart_toStartOf="@+id/zipcodeEditText"
            app:layout_constraintEnd_toEndOf="@+id/zipcodeEditText" app:layout_constraintHorizontal_bias="0.428"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/forecastList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/enterButton"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/forecast_item_background"
    />
    <!--android:background="#ABABAB" -->

</androidx.constraintlayout.widget.ConstraintLayout>